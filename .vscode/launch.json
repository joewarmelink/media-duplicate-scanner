{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Remote Debug - Media Scanner (Multiple Roots)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/media_duplicate_scanner.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--log-level",
                "DEBUG",
                "--output-dir",
                "./media-dup-reports",
                "--log-dir",
                "./media-dup-reports/logs",
                "--movie-roots",
                "/media/4TB-WD2/MOVIES",
                "/media/16TB-HM/MOVIES",
                "--tv-roots",
                "/media/4TB-WD2/TV",
                "/media/16TB-HM/TV"
            ],
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Remote Debug - Custom Args",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/media_duplicate_scanner.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [],
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}
